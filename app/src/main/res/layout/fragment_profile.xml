<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#F4F5F8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ramp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Richard Williams"
            android:textColor="@color/secondary_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="richard.will@gmail.com"
            android:textColor="#6A6A6A" />

        <androidx.cardview.widget.CardView
            android:layout_width="351dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:outlineSpotShadowColor="#4F000000"
            app:cardCornerRadius="24dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:gravity="center_vertical"
                    android:layout_width="351dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/edit_icon"
                    app:iconSize="40dp"
                    app:iconTint="@null"
                    app:iconPadding="22dp"
                    android:text="Edit Profile"
                    app:rippleColor="#DFDFDF"
                    android:textStyle="bold"
                    android:textColor="#454545" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContributions"
                    android:gravity="center_vertical"
                    android:layout_width="351dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/mycontribution_icon"
                    app:iconSize="40dp"
                    app:iconTint="@null"
                    app:iconPadding="22dp"
                    android:text="My Contributions"
                    app:rippleColor="#DFDFDF"
                    android:textStyle="bold"
                    android:textColor="#454545" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="351dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:outlineSpotShadowColor="#4F000000"
            app:cardCornerRadius="24dp"
            app:cardElevation="3dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogoff"
                android:gravity="center_vertical"
                android:layout_width="351dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/logoff_icon"
                app:iconSize="40dp"
                app:iconTint="@null"
                app:iconPadding="22dp"
                android:text="Log Out"
                app:rippleColor="#DFDFDF"
                android:textStyle="bold"
                android:textColor="#454545" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>